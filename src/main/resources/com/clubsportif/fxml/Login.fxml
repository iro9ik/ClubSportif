<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clubsportif.controller.LoginController">

    <center>
        <VBox alignment="CENTER" maxWidth="450" spacing="20" styleClass="card login-card">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <Label styleClass="logo-title" text="ClubMe" />

            <VBox spacing="16">
                <TextField fx:id="usernameField" promptText="Username" styleClass="text-field" />
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field" />
            </VBox>

            <Button maxWidth="Infinity" onAction="#login" styleClass="button-primary" text="Login" />

            <Button onAction="#goToRegister" styleClass="button-ghost" text="Create an account" />

        </VBox>
    </center>
</BorderPane>
