<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      fx:controller="com.clubsportif.controller.MemberController"
      prefWidth="900"
      prefHeight="600"
      stylesheets="@/css/styles.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets top="20"/>
    </padding>

    <Label text="Gestion des Membres"
           styleClass="title"/>

    <GridPane hgap="10" vgap="10">

        <columnConstraints>
            <ColumnConstraints prefWidth="120"/>
            <ColumnConstraints prefWidth="200"/>
            <ColumnConstraints prefWidth="120"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="Nom"/>
        <TextField fx:id="txtNom" GridPane.columnIndex="1"/>

        <Label text="Age" GridPane.rowIndex="1"/>
        <TextField fx:id="txtAge" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Date d'entrée" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dateEntree" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Salaire" GridPane.columnIndex="2"/>
        <TextField fx:id="txtSalaire" GridPane.columnIndex="3"/>

    </GridPane>

    <TableView fx:id="table" prefHeight="250">

        <columns>
            <TableColumn text="ID" prefWidth="60"/>
            <TableColumn text="Nom" prefWidth="200"/>
            <TableColumn text="Age" prefWidth="80"/>
            <TableColumn text="Date Entrée" prefWidth="160"/>
            <TableColumn text="Salaire" prefWidth="120"/>
        </columns>

    </TableView>

    <HBox spacing="15" alignment="CENTER">

        <Button text="Ajouter" onAction="#ajouter"/>
        <Button text="Modifier" onAction="#modifier"/>
        <Button text="Supprimer" onAction="#supprimer"/>
        <Button text="Afficher" onAction="#afficher"/>
        <Button text="Salaire Moyen" onAction="#afficherSalaireMoyen"/>

    </HBox>

    <Label fx:id="salaireMoyen"
           text="Salaire Moyen : 0.00 DH"
           styleClass="info"/>

</VBox>
